<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<section id="denot" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
			<label>Desktop Notfications</label>
			<tab>general</tab>
			<resource>Taral_DesktopNotifications::desktopnotifications</resource>
			<group id="general" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>General Settings</label>
				<field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Desktop Notification</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
			</group>
			<group id="app" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>API Settings</label>
				<field id="app_id" translate="label" type="text" sortOrder="0" showInStore="1" showInWebsite="1" showInDefault="1">
					<label>Pusher App ID</label>
				</field>
				<field id="app_key" translate="label" type="text" sortOrder="1" showInStore="1" showInWebsite="1" showInDefault="1">
					<label>Pusher App Key</label>
				</field>
				<field id="app_secret" translate="label" type="text" sortOrder="2" showInStore="1" showInWebsite="1" showInDefault="1">
					<label>Pusher App Secret</label>
				</field>
				<field id="app_channel" translate="label" type="text" sortOrder="3" showInStore="1" showInWebsite="1" showInDefault="1">
					<label>Pusher App Channel</label>
				</field>
				<field id="app_event" translate="label" type="text" sortOrder="4" showInStore="1" showInWebsite="1" showInDefault="1">
					<label>Pusher App Event</label>
				</field>
				<field id="app_debug" translate="label" type="select" sortOrder="5" showInStore="1" showInWebsite="1" showInDefault="1">
					<label>Enable Debug Mode(Log Pusher events in browser console)</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
			</group>
		</section>
	</system>
</config>